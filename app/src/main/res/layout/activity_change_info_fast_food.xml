<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChangeInfoFastFoodActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFF"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgChangeFastFood"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="2"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:text="tên :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="5dp"
                android:text="địa chỉ :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="5dp"
                android:text="giá :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="điện thoại:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtChangeTenFastFood"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                />
            <EditText
                android:id="@+id/edtChangeDiaChiFastFood"
                android:layout_width="match_parent"
                android:layout_marginBottom="9dp"

                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/edtChangeGiaFastFood"
                android:layout_width="match_parent"
                android:layout_marginBottom="9dp"

                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/edtChangeDTFastFood"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHuyFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"

            android:layout_marginLeft="150dp"
            android:textAllCaps="false"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btnChangeFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Ok"/>
    </LinearLayout>

</LinearLayout>