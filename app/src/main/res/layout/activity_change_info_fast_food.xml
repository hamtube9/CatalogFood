<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChangeInfoFastFoodActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgChangeFastFood"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="tên :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:text="địa chỉ :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:text="giá :"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="điện thoại :"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtChangeTenFastFood"
                android:layout_width="match_parent"

                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                style="@style/EditText.Login"
                android:theme="@style/EditText.Login"/>
            <EditText
                android:id="@+id/edtChangeDiaChiFastFood"
                android:layout_width="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_height="30dp"
                style="@style/EditText.Login"
                android:theme="@style/EditText.Login"/>
            <EditText
                android:id="@+id/edtChangeGiaFastFood"
                android:layout_width="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_height="30dp"
                style="@style/EditText.Login"
                android:theme="@style/EditText.Login"/>
            <EditText
                android:id="@+id/edtChangeDTFastFood"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                style="@style/EditText.Login"
                android:theme="@style/EditText.Login"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"

            android:layout_marginLeft="150dp"
            android:textAllCaps="false"/>
        <Button
            android:layout_marginLeft="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Ok"/>
    </LinearLayout>

</LinearLayout>